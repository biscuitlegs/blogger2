<div class="title">
  <h1>All Authors</h1>
</div>


<table id=articles-table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td class="table-link"><%= link_to author.username, author %></td>
        <td class="table-link"><%= link_to author.email, author %></td>
      </tr>
    <% end %>
  </tbody>
</table>

