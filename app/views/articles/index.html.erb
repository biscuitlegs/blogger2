<div id="article-list-header">
    <h1>All Articles</h1>
</div>

<!-- Update when Author and Tagging features are added-->
<table id="articles-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Tags</th>
            <th>Last Updated At</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td class="article-link"><%= link_to article.title, article %></td>
            <td class="article-author">author_name</td>
            <td class="article-tags">tag1, tag2</td>
            <td class="article-update-time"><%= article.updated_at %></td>
        </tr>
    <% end %>
    </tbody>
</table>