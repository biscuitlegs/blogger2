        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M9 11l-4 4l4 4m-4 -4h11a4 4 0 0 0 0 -8h-1" />
        </svg>
    </a>
</div>

<% if logged_in? %>
    <div id="create-article-link">
        <a href="<%= new_article_path %>">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-plus" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F2CC8F" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M14 3v4a1 1 0 0 0 1 1h4" />
            <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
            <line x1="12" y1="11" x2="12" y2="17" />
            <line x1="9" y1="14" x2="15" y2="14" />
            </svg>
        </a>
    </div>
<% end %>
<div class="title">
    <h1>All Articles</h1>
</div>

<table id="articles-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td class="table-link"><%= link_to article.title, article %></td>
            <td class="table-link">
                <% author = Author.find(article.author_id) %>
                <% if logged_in? && current_user.id == author.id %>
                    <%= link_to "Me", author %>
                <% else%>
                    <%= link_to author.username, author %>
                <% end %>
            </td>
            <td class="article-tags">
                <% if article.tags.length > 2 %>
                    <%= render partial: "articles/tag", collection: article.tags.first(2), :locals => { article: article } %>
                    and <%= article.tags.length - 2 %> more.
                <% else %>
                    <%= render partial: "articles/tag", collection: article.tags, :locals => { article: article } %>
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>